<article class="mb-3 card" id="answer-<%= answer.id %>">  
  <div class="card-body">
    <section class="card-text">
      <small><time datetime="<%= answer.format_created_at %>">
        <%= answer.format_created_at %>
      </time></small>

      <div>
       <%= sanitize answer.body %>
      </div>
    </section>

    <%= link_to 'Edit', edit_question_answer_path(question, answer), class: 'btn btn-secondary btn-sm'%>

    <%= link_to 'Delete', question_answer_path(question, answer), class: 'btn btn-danger btn-sm',
      data: {method: :delete, confirm: "Are you sure?"} %>
  </div>
</article>
